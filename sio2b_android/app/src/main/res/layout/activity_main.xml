<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pw.sio2b.MainActivity">

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:max="100"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_d1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_d1_text"
        android:gravity="left|center_vertical"
        android:onClick="selectD1" />
    <Button
        android:id="@+id/button_d2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_d2_text"
        android:gravity="left|center_vertical"
        android:onClick="selectD2" />
    <Button
        android:id="@+id/button_d3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_d3_text"
        android:gravity="left|center_vertical"
        android:onClick="selectD3" />
    <Button
        android:id="@+id/button_d4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_d4_text"
        android:gravity="left|center_vertical"
        android:onClick="selectD4" />
 
    <Spinner
        android:id="@+id/sio_speed_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bps_display"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top" />

    <TextView
        android:id="@+id/message_buffer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom" />

 </LinearLayout>
